
    
<img src="<%= user.avatar %>" alt="<%= user.name%>" width="100">

<% if (user.id == profile_user.id){%>
    <p><%= profile_user.name%></p>
    <form action="/users/update/<%= user.id%>" enctype="multipart/form-data" method="POST">
        <input type="text" name="name" value="<%= user.name%>" placeholder="change your name" required>
        <input type="email" name="email" value="<%= user.email%>" placeholder="change your email" required>
        <input type="file" name="avatar" placeholder="Profile Picture">
        <input type="submit" value="Submit">
    
    </form>
<%}else{%>

    <p><%= profile_user.name%></p>
    <p><%= profile_user.email%></p>

<%}%>

<a href="/follow/?to=<%= profile_user._id%>">Follow</a>


   

<link rel="stylesheet" href="/css/comments.css">

    <li id="comment-<%= comment._id%>">
        <%if(((locals.user) && (comment.user.id == locals.user.id)) || ((locals.user) && (locals.user.id == post.user.id))){%>
            <div>
                <div id="delete-comment">
                    <a href="/comments/destroy/<%= comment.id%>" class="delete-comment-button">X</a>
                </div>
            <%}%>
                <div id="comment-content">
                    <h5><%= comment.user.name%></h5>
                    <%= comment.content%>

                    
                </div>
                <small>
                    <%if(locals.user){%>
                        <a class="post-like" data-like = "<%= comment.like.length%>" href="/likes/toggle/?id=<%= comment._id%>&type=Comment%>">
                            <%= comment.like.length%> Likes
                        </a>
                    <%}else{%>
                        <%= comment.like.length%> Likes
                    <%}%>
                </small>
        
            </div>
    </li>
    
    
        
    

